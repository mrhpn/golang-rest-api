                    "type": "boolean",
                    "example": true
                }
            }
        },
        "media.MediaResponse": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                }
            }
        },
        "security.Role": {
            "type": "string",
            "enum": [
                "superadmin",
                "admin",
                "employee",
                "user"
            ],
            "x-enum-varnames": [
                "RoleSuperAdmin",
                "RoleAdmin",
                "RoleEmployee",
                "RoleUser"
            ]
        },
        "users.CreateUserRequest": {
            "type": "object",
            "required": [
                "email",
                "password",
                "role"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string",
                    "minLength": 8
                },
                "role": {
                    "enum": [
                        "admin",
                        "employee",
                        "user"
                    ],
                    "allOf": [
                        {
                            "$ref": "#/definitions/security.Role"
                        }
                    ]
                }
            }
        },
        "users.UserResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "role": {
                    "$ref": "#/definitions/security.Role"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer \" followed by a space and then your token.",
